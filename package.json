{
  "name": "studiofit-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "test": "npm run test:unit && npm run test:api",
    "test:unit": "jest --config jest.config.ts --selectProjects unit",
    "test:api": "jest --config jest.config.ts --selectProjects api",
    "test:playwright": "node scripts/run-playwright.js",
    "test:all": "npm run test && npm run test:playwright",
    "postinstall": "npm --prefix frontend install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.18.0",
    "pino-pretty": "^10.2.0",
    "stripe": "^13.5.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
